<body>
  <a href="#" id="loginBtn">Войти через Spotify</a>

  <script>
    const client_id = '0389aee26c424efca9c19679d57d825d';
    const redirect_uri = 'https://Golkatok.github.io/SpotifyCallback.html';
    const scopes = 'user-read-private user-read-email';

    document.getElementById('loginBtn').onclick = () => {
      const url = `https://accounts.spotify.com/authorize?response_type=token&client_id=${client_id}&scope=${encodeURIComponent(scopes)}&redirect_uri=${encodeURIComponent(redirect_uri)}`;
      window.location.href = url;
    };
  </script>
